<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/flagImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/american_flag" />

            <TextView
                android:id="@+id/currencyNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/flagImageView"
                tools:text="EUR" />

            <TextView
                android:id="@+id/informationNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/currencyNameTextView"
                android:layout_below="@+id/currencyNameTextView"
                tools:text="Existing Home Sales (Aug)" />

            <TextView
                android:id="@+id/dateNearestAnnouncementTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/informationNameTextView"
                android:layout_below="@+id/informationNameTextView"
                android:layout_marginTop="5dp"
                tools:text="10:30 12 september 2016" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/flagImageView"
                android:id="@+id/attributeListLayout"></LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>